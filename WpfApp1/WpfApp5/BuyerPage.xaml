<Window x:Class="WpfApp5.BuyerPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp5"
        mc:Ignorable="d"
        Title="BuyerPage" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0">
            <!-- DataGrid for Contract -->
            <DataGrid Name="ContractGrid" IsReadOnly="True" />

            <Button Content="Refresh" Click="Button_Click" HorizontalAlignment="Right" Margin="0,10,10,10" />
        </StackPanel>
    </Grid>
</Window>
